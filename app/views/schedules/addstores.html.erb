<% provide(:title, "管理者用設定") %>
<div class="row">
  <div class="col-md-6">
    <%= form_for @store do |f| %>
      <div class="field">
        <%= f.label :追加する店舗名を入力してください %><br />
        <%= f.text_field :storename %>
      </div>
      <%= f.submit "追加", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h3>追加済み店舗一覧</h3>
    <div>
      <table class="table-bordered table-striped table-responsive">
        <tr>
          <th>店舗ID</th>
          <th>店舗名</th>
        </tr>
        <% @stores.each do |store| %>
          <tr class="stores">
            <td><%= store.id%></td>
            <td><%= store.storename%></td>
            <td><%= link_to "削除", store, method: :delete, data: { confirm: "削除してもよろしいですか？"}%></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<%if false%>
<div class="row">
  <div class="col-md-6"></div>
  <div class="col-md-6">
    <h3>管理者権限追加</h3>
    <div>
      <table class="table-bordered table-striped table-responsive">
        <tr>
          <th>ユーザ名</th>
          <th>権限</th>
        </tr>
        <% @users.each do |user| %>
          <tr class="stores">
            <td><%= user.username %></td>
            <td>
              <% if user.admin? %>
                管理者
              <% else %>
                従業員
              <% end %>
            </td>
            <td>
              <% unless user.admin? %>
                <%# link_to "承認する", schedules_updateadmin_path, method: :post, data: { confirm: "管理者権限を付与します。"} %>
                <%# link_to "承認する", schedules_updateadmin_path, id: user.id, method: :post%>
                <%# link_to "承認する", schedules_updateadmin_path, method: :patch%>
              <% else %>
                <%= link_to "承認解除", schedules_updateadmin_path, method: :post, data: { confirm: "管理者権限を解除します。"} %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<%end%>