<%#シフトが承認済かでlink_toの文字色変更%>
<% if schedule.approved == true %>
  <%= link_to "#{schedule.request_timezone}", schedule, method: :patch, remote: true, class: "approved" %>
<% else %>
  <%= link_to "#{schedule.request_timezone}", schedule, method: :patch, remote: true, class: "not-approved" %>
<% end %>
